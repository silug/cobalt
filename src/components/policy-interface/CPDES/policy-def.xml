<?xml version="1.1"?>
<policy>
 <eventSpace eventSpaceName="FTB.COBALT.DEMO">
  <application name="IPS">
   <event id="1" type="SINGLE" comment="Single type event">
    <eventName>NODE_FAIL</eventName>
    <action type="MESSAGE">
     <command>SINGLE_FAIL occured</command>
    </action>
   </event>
   <event id="2" type="MULTIPLE" comment="Multiple type event">
    <eventName>MULTIPLE_FAIL</eventName>
    <count>5</count>
    <action type="EXECUTION">
     <command>echo 'MULTIPLE_FAIL occured'</command>
    </action>
   </event>
   <event id="3" type="TIMED" comment="Timed event">
    <eventName>TIMED_FAIL</eventName>
    <time>5000</time>
    <action type="EXECUTION">
     <command>echo 'TIMED_FAIL occured'</command>
    </action>
   </event>
   <event id="4" type="HYBRID" comment="Multiple failure within time limit">
    <eventName>HYBRID_FAIL</eventName>
    <count>3</count>
    <time>10000</time>
    <action type="EXECUTION">
     <command>echo 'HYBRID_FAIL occured'</command>
    </action>
   </event>
  </application>
 </eventSpace>
</policy>
